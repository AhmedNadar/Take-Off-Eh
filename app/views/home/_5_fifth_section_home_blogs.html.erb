<section class="my-8 bg-white">
  <div class="container grid justify-center grid-cols-1 gap-2 px-2 pt-16 pb-16 mx-auto max-w-screen-l">
    <h1 class="mb-2 text-3xl font-bold leading-tight text-center sm:text-2xl md:text-3xl lg:text-4xl font-display">Discover hundrands of growing startups in Torotno</h1>
    <p class="max-w-xl mx-auto mt-4 mb-12 text-lg text-center text-gray-600 sm:text-lg md:text-xl lg:text-xl md:text-l">
      Experince the startup ecosystem - invest in startups, research the fastest growing blogs, and find a job you love.
    </p>
    
    <div class="grid sm:gap-4 sm:mx-2 grid-cols-24 sm:gap-y-4 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-y-4">
      <% @blogs.each do |blog| %>
      <%= link_to blog_path(blog), class:"col-start-2 col-span-22 sm:col-span-1", alt:" View #{blog.title}", title:"View #{blog.title}" do %>
        <div class="flex items-start max-h-full">
          <div class="relative flex-row w-full duration-500 ease-in-out transform border border-gray-300 rounded-lg hover:shadow-md min-h-card">
            <%= image_tag blog.image.variant(resize: "300x200^", crop: '300x200+0+0'), class:"h-56 w-full mb-4 rounded-t-lg", alt:"#{blog.title} logo" if blog.image.present? %>
          
            <div class="p-4">            
              <h3 class="text-base font-normal md:text-lg lg:text-xl"><%= truncate(strip_tags(blog.title.to_s), length: 140) %></h3>        
            </div> 
          </div>            
        </div>
      <% end %>
      <% end %>
    </div>  
    <p class="max-w-xl mx-auto mt-8 mb-12 text-center">
      <%= link_to "Discover more local blogs", blogs_path, class: "sm:text-lg md:text-xl text-gray-700 underline font-bold transition duration-150 ease-in-out hover:text-gray-900" %>
    </p>
  </div>
</section> 