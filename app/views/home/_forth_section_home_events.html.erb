<section class="my-8 bg-white">
  <div class="container grid justify-center grid-cols-1 gap-2 px-2 pt-16 pb-16 mx-auto max-w-screen-l">
    <h1 class="mb-2 text-3xl font-bold leading-tight text-center sm:text-2xl md:text-3xl lg:text-4xl font-display">Go deeper on Toronto companies and investing</h1>
    <p class="max-w-xl mx-auto mt-4 mb-12 text-lg text-center text-gray-600 sm:text-lg md:text-xl lg:text-xl md:text-l">
      Stop wasting time sorting hundreds of applicants with our new Candidate Filtering feature
    </p>
    
    <div class="grid gap-2 sm:gap-2 grid-cols-24 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
      <% @events.each do |event| %>
      <%= link_to event_path(event), class:"col-start-2 col-span-22 sm:col-span-1 bg-white", alt:" View #{event.name} event", name:"View #{event.name} event" do %>
      
        <div class="flex items-start h-40 md:h-56">
          <div class="relative flex-row w-full min-h-full p-4 duration-500 ease-in-out transform bg-white border border-gray-300 rounded-lg hover:shadow-md">

          <p class="mb-4 text-base font-light font-normal text-gray-900 sm:text-lg md:text-xl lg:text-2xl xl:text-3xl flex-inline md:mb-0"><%= event.date.strftime("%d") %>
            <span class="mb-4 ml-2 text-xs font-light text-gray-600 sm:mb-6 tracking-moreWide sm:flex md:ml-0"><%= event.date.strftime("%^B") %></span>
          </p>                            
            
            <h1 class="text-base font-medium"><%= truncate(strip_tags(event.name.to_s), length: 35) %></h1>        
            <div class="absolute inset-x-0 bottom-0 flex flex-col flex-wrap pb-4 pl-4 pr-4">
              
              <span class="text-sm font-light text-gray-900 flex-inline"><%= event.date.strftime("%I:%M %p") %></span>
              <span class="text-sm font-normal text-indigo-600 flex-inline">@ <%= event.location %> </span>
              
            </div>
          </div>   
        </div>
      <% end %>
      <% end %>
    </div>
    <p class="max-w-xl mx-auto mt-8 mb-12 text-center">
      <%= link_to "Explore sweet events opportunities", events_path, class: "sm:text-lg md:text-xl text-gray-700 underline font-bold transition duration-150 ease-in-out hover:text-gray-900" %>
    </p>
  </div>
</section>



          
