<section class="my-8 abs_bg">
  <div class="container grid justify-center grid-cols-1 gap-2 px-2 pt-16 pb-16 mx-auto max-w-screen-l">
    <h1 class="mb-2 text-3xl font-bold leading-tight text-center sm:text-2xl md:text-3xl lg:text-4xl font-display">Start and grow your career</h1>
    <p class="max-w-xl mx-auto mt-4 mb-12 text-lg text-center text-gray-600 sm:text-lg md:text-xl lg:text-xl md:text-l">
      Companies user the BIT to hire talented like yourself
    </p>
    
    <div class="grid sm:gap-6 grid-cols-24 sm:gap-y-6 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-y-4 sm:mx-2">
      <% @jobs.each do |job| %>
      <%= link_to job_path(job), class:"col-start-2 col-span-22 sm:col-span-1 bg-white", alt:" View #{job.title} job", title:"View #{job.title} job" do %>
        <div class="flex items-start h-32 sm:h-48">
          <div class="relative w-full min-h-full p-4 border border-gray-200 rounded shadow-md">
            
            <p class="flex flex-wrap items-center justify-start flex-inline">
              <%= image_tag job.company.company_logo.variant(resize: '34x34!'), class:"mr-3 rounded", alt:"#{job.company.name} logo" if job.company.company_logo.present? %>
              <span class="text-sm md:text-base font-heading"><%= truncate(strip_tags(job.company.name.to_s), length: 30) %></span>            
            </p>
            
            <h3 class="mt-2 mb-2 font-bold md:mt-6 text-l md:text-xl font-heading"><%= truncate(strip_tags(job.title.to_s), length: 32) %></h3>
                                  
            <div class="absolute inset-x-0 bottom-0 flex flex-wrap justify-between pb-4 pl-4 pr-4 text-xs md:text-sm">
              <p class="flex items-start pt-2 flex-inline">
                  <span><%= job.job_type %> </span>
                <% if job.region === "100% Remote" %>
                  <span class="ml-2 mr-2">&#8211;</span>
                  <span class="flex font-bold text-green-600 flex-inline">
                    <%= job.region %>
                    <span class="flex items-center ml-1 leading-5 text-green-500 sm:mr-2">
                      <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path clip-rule="evenodd" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0" />
                      </svg>                  
                    </span>                                      
                  </span>
                <% else %>      
                  <span class="ml-2 mr-2">&#8211;</span>
                  <span><%= job.region %> </span>                
                <% end %>  
              </p>
              <span class="items-end pt-2 font-semibold text-pink-500">
                <%= truncate(strip_tags(job.category.upcase!.to_s), length: 10) %>  
              </span>
            </div>
          </div>   
        </div>
      <% end %>
      <% end %>
    </div>
    <p class="max-w-xl mx-auto mt-8 mb-12 text-center">
      <%= link_to "Explore sweet jobs opportunities", companies_path, class: "sm:text-lg md:text-xl text-indigo-500 underline font-bold transition duration-150 ease-in-out hover:text-pink-600" %>
    </p>
  </div>
</section>