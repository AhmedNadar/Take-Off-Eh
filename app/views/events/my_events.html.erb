<table class="table table-bordered table-striped table-condensed table-hover">
  <thead>
    <% current_user.events.each do |event| %>

      <tr>
        <th>Name</th>
        <th>Details</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <tr>
        <td><%= event.name %></td>
        <td><%= event.details %></td>
        <td><%= link_to 'Show', event , class: "bg-gray-400 hover:bg-gray-500 text-gray-800 font-bold py-2 px-4 rounded" %></td>

          <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-sm btn-outlined btn-default" %></td>

          <td><%= link_to 'Delete', event, method: :delete, class: "btn btn-sm btn-outlined btn-default", data: { confirm: "Are you sure?" } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New event', new_event_path, class: "btn btn-sm btn-outlined btn-default" %>


