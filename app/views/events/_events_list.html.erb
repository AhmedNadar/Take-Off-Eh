<h1>My events</h1>

<table class="table">
  <thread>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th>Category</th>
      <th>Location</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thread>

  <tbody>
    <% @my_events.each do |event| %>
    <td><%= event.name %></td>
    <td><%= event.details %></td>
    <td><%= event.category %></td>
    <td><%= event.location %></td>
    <td><%= event.date %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  </tbody>
  <% end %>
</table>
