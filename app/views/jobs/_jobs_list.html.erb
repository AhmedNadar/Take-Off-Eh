<h1>My Jobs</h1>

<table class="table">
  <thread>
    <tr>
      <th>Title</th>
      <th>Region</th>
      <th>Category</th>
      <th>Job Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thread>

  <tbody>
    <% @my_jobs.each do |job| %>
    <td><%= job.title %></td>
    <td><%= job.region %></td>
    <td><%= job.category %></td>
    <td><%= job.job_type %></td>
    <td><%= job.description %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  </tbody>
  <% end %>
</table>