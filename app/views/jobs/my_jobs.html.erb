<table class="table table-bordered table-striped table-condensed table-hover">
  <thead>
    <% current_user.jobs.each do |job| %>

      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', job , class: "bg-gray-400 hover:bg-gray-500 text-gray-800 font-bold py-2 px-4 rounded" %></td>

          <td><%= link_to 'Edit', edit_job_path(job), class: "btn btn-sm btn-outlined btn-default" %></td>

          <td><%= link_to 'Delete', job, method: :delete, class: "btn btn-sm btn-outlined btn-default", data: { confirm: "Are you sure?" } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New job', new_job_path, class: "btn btn-sm btn-outlined btn-default" %>
