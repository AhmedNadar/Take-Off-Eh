<% flash.each do |type, message| %>
  <% if type == "alert" %>
    <div class="relative bg-red-500 z-110">
      <div class="container px-2 py-4 mx-auto font-sans font-medium text-center text-white"><%= message %></div>
    </div>
  <% end %>
  <% if type == "notice" %>
    <div class="relative bg-green-500 z-110 ">
      <div class="container px-2 py-4 mx-auto font-sans font-medium text-center text-white"><%= message %></div>
    </div>
  <% end %>
<% end %>
