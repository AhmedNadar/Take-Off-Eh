<header id="header">
  <nav class="flex flex-wrap mx-auto">
    <div class="fixed inset-x-0 top-0 flex flex-wrap items-center justify-between h-16 h-20 p-4 bg-white bg-opacity-90 z-100">    
      <div class="w-auto lg:order-1 lg:w-2/5 lg:text-center">
        <%= link_to root_path, class:"flex flex-wrap items-center justify-start" do %>
          <img class="w-auto h-8 mr-2 sm:h-8" src="https://tailwindui.com/img/logos/workflow-mark-on-white.svg" alt="Logo">
          <h1 class="text-2xl font-extrabold">Built In Toronto</h1>       
        <% end %>   
      </div> 

      <div class="absolute right-0 block mr-4 lg:hidden">
        <button class="flex items-center px-3 py-2 text-indigo-500 border border-indigo-500 rounded navbar-burger">
          <svg class="w-3 h-3 fill-current" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <title>Menu</title>
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
          </svg>
        </button>
      </div>       
      <%= render navigation_links_partial_path %>
    </div>
  </nav>
</header>
