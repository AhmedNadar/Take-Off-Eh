<div class="py-12 bg-white">
  <div class="max-w-screen-xl px-4 mx-auto sm:px-6 lg:px-8">

    <main class="max-w-screen-xl px-4 mx-auto mt-10 mb-10 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
      <div class="sm:text-center lg:text-left">
        <h2 class="text-4xl font-extrabold leading-10 tracking-tight text-gray-900 sm:text-5xl sm:leading-none md:text-6xl">
          <%= @stage.name %>          
          <span class="text-indigo-600">stage</span>
        </h2>     
      </div>
    </main>
    <hr class="hr">
    <div class="actions">
      <span class="rounded-md shadow-sm">
        <button type="button" class="inline-flex items-center px-4 py-2 text-sm font-medium leading-5 text-green-700 transition duration-150 ease-in-out bg-white bg-green-100 border border-green-300 rounded-md hover:text-green-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:text-green-800 active:bg-green-50">
          <svg class="w-5 h-5 mr-2 -ml-1 text-green-700" x-description="Heroicon name: pencil" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
          </svg>
          <%= link_to 'Edit', edit_stage_path(@stage)%>
        </button>
      </span>
      <span class="rounded-md shadow-sm sm:ml-3">
        <button type="button" class="inline-flex items-center px-4 py-2 text-sm font-medium leading-5 text-white transition duration-150 ease-in-out bg-indigo-600 border border-transparent rounded-md hover:bg-indigo-500 focus:outline-none focus:shadow-outline-indigo focus:border-indigo-700 active:bg-indigo-700">
          <svg class="w-5 h-5 mr-2 -ml-1" x-description="Heroicon name: check" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <%= link_to 'All Industries', industries_path %>
        </button>
      </span>
      <span class="rounded-md shadow-sm sm:ml-3">
        <button type="button" class="inline-flex items-center px-4 py-2 text-sm font-medium leading-5 text-white transition duration-150 ease-in-out bg-pink-600 border border-transparent rounded-md hover:bg-pink-500 focus:outline-none focus:shadow-outline-pink focus:border-pink-700 active:bg-pink-700">
          <svg class="w-5 h-5 mr-2 -ml-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>          
          <%= link_to 'New stage', new_stage_path %>
        </button>
      </span>

    </div>  
  </div>
</div>


