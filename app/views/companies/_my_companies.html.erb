<table class="table table-bordered table-striped table-condensed table-hover">
  <thead>
    <% policy_scope(current_user.companies).each do |company| %>

      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <tr>
        <td><%= company.name %></td>
        <td><%= company.details %></td>
        <td><%= link_to 'Show', company , class: "bg-gray-400 hover:bg-gray-500 text-gray-800 font-bold py-2 px-4 rounded" %></td>
        <% if policy(company).edit? %>
          <td><%= link_to 'Edit', edit_company_path(company), class: "btn btn-sm btn-outlined btn-default" %></td>
        <% end %>
        <% if policy(company).destroy? %>
          <td><%= link_to 'Delete', company, method: :delete, class: "btn btn-sm btn-outlined btn-default", data: { confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New company', new_company_path, class: "btn btn-sm btn-outlined btn-default" %>
