<% if @company.team_members.present? %>
  <!-- Team Members -->
  <section class="w-full py-2">
    <div class="w-full mx-auto mb-6">
      <span class="flex mb-8 text-6xl font-hairline text-indigo-700 flex-inline">ü§ù Meet our team</span>
    </div>
    <div class="flex flex-wrap -mx-4 text-center">
      <% @company.team_members.each do |member| %>
        <div class="w-full px-4 mb-8 lg:w-1/4">
          <figure class="h-full pb-6 overflow-hidden rounded-lg shadow">
            <%= image_tag member.member_photo.variant(resize: '300x300!').processed, class:"w-full mb-4 rounded-t-lg h-64 w-64 object-cover object-top", alt:member.full_name, title:member.full_name %> 
            <figcaption class="font-medium">
              <div class="px-6">
                <h3 class="mb-1 text-xl font-semibold font-heading"><%= member.full_name %></h3>
                <span class="mb-4 text-gray-600"><%= member.title.capitalize %></span>
                <div class="flex justify-center py-3 mx-12 my-4 space-x-6 border-t border-b">
                  <span class="flex">
                    <%= mail_to member.email, subject: "Hi from Built In Toronto", title: "Email #{member.full_name}", class:"transition ease-in-out duration-500 text-indigo-400 hover:text-indigo-800" do %>
                      <svg class="w-6 h-6 explain" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>  
                      <span class="text-gray-900 transition duration-700 ease-in-out tooltip">Email <%=member.full_name%> </span>                  
                    <%end%>
                  </span>
                                    
                  <span class="flex">
                    <%=link_to "http://#{member.profile_link}", target: '_blank', title: "Visit #{member.profile_link}", class:"transition ease-in-out duration-00 text-indigo-400 hover:text-indigo-800" do %>
                      <svg class="w-6 h-6 explain"  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zm6.93 6h-2.95c-.32-1.25-.78-2.45-1.38-3.56 1.84.63 3.37 1.91 4.33 3.56zM12 4.04c.83 1.2 1.48 2.53 1.91 3.96h-3.82c.43-1.43 1.08-2.76 1.91-3.96zM4.26 14C4.1 13.36 4 12.69 4 12s.1-1.36.26-2h3.38c-.08.66-.14 1.32-.14 2 0 .68.06 1.34.14 2H4.26zm.82 2h2.95c.32 1.25.78 2.45 1.38 3.56-1.84-.63-3.37-1.9-4.33-3.56zm2.95-8H5.08c.96-1.66 2.49-2.93 4.33-3.56C8.81 5.55 8.35 6.75 8.03 8zM12 19.96c-.83-1.2-1.48-2.53-1.91-3.96h3.82c-.43 1.43-1.08 2.76-1.91 3.96zM14.34 14H9.66c-.09-.66-.16-1.32-.16-2 0-.68.07-1.35.16-2h4.68c.09.65.16 1.32.16 2 0 .68-.07 1.34-.16 2zm.25 5.56c.6-1.11 1.06-2.31 1.38-3.56h2.95c-.96 1.65-2.49 2.93-4.33 3.56zM16.36 14c.08-.66.14-1.32.14-2 0-.68-.06-1.34-.14-2h3.38c.16.64.26 1.31.26 2s-.1 1.36-.26 2h-3.38z"></path>
                      </svg> 
                      <span class="text-gray-900 transition duration-700 ease-in-out tooltip">Visit: <%=member.profile_link%> </span>                   
                    <%end%>
                  </span>

                </div>

              </div>
            </figcaption>
            <blockquote>
              <p class="px-6 font-serif text-sm italic font-normal"><%=truncate(strip_tags(member.note.to_s).capitalize, length: 100)%></p>
            </blockquote> 
          </figure>
        </div>
      <% end %>
    </div>
  </section>
<% end %>