
<label>Member Information</label>

<div class='nested-fields'>  
  <%= form.hidden_field :_destroy %>

  <p><%= form.text_field :title, placeholder: "Memebr title" %></p>
  <p><%= form.text_field :first_name, :value => current_user.first_name, placeholder: "First name" %></p>
  <p><%= form.text_field :last_name, placeholder: "Last Name" %></p>
  <p><%= form.text_field :profile_link, placeholder: "Profile Link" %></p>
  <p><%= form.text_field :email, placeholder: "Email" %></p>


      <h3 class="mt-2 text-3xl font-extrabold leading-8 tracking-tight text-gray-900 sm:text-4xl sm:leading-10">
        Team Member photo
      </h3>
      <ul class="md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
        <li>
          <div class="flex">            
            <div class="dropzone dropzone-default dz-clickable" data-controller="dropzone" data-dropzone-max-file-size="2" data-dropzone-max-files="1">
              <%= form.file_field :member_photo, direct_upload: true, class: 'form-input py-10', accept: 'image/png, image/jpeg, image/gif, image/tiff', size_limit: 5_000_000, data: { target: 'dropzone.input' } %>
            <div class="text-gray-600 dropzone-msg dz-message needsclick">
              <h3 class="dropzone-msg-title">Drag here to upload or click here to browse for team photo</h3>
              <span class="text-sm dropzone-msg-desc">2 MB file size maximum. Allowed file types png, jpg.</span>
            </div>
          </div>
        </li>
        <li class="mt-10 md:mt-0">
          <div class="flex">
            <% @company.team_members.each do |member| %>
              <%= image_tag member.member_photo.variant(resize: '100x100!').processed, class: "rounded-full h-56 w-56 mx-auto", alt: member.title %>
            <% end %>
          </div>
        </li>

      </ul>

    </div>
  </div>

  <small>
    <%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" } %>
  </small>
</div>
